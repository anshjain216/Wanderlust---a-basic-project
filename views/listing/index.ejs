<% layout("/layout/boilerplate.ejs") %>

    <body>
        <br>
        <h1>All Listings</h1>
        <br>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let list of alllisting){%>
                <a href="/listings/<%= list._id %>/show" class="listing-link">
                    <div class="card col">
                        <img src="<%= list.image %>" class="card-img-top" alt="..." style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= list.title %>
                                </b>
                                <br>
                                &#8377;<%= list.price.toLocaleString("en-IN") %> / night
                            </p>
                        </div>
                    </div>
                </a>

                <% } %>

        </div>

    </body>