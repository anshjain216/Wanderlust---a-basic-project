<% layout("/layout/boilerplate.ejs") %>

    <body>
        <style>
            .filters {
                display: flex;
                flex-wrap: wrap;
                text-decoration: none;
            }
            .filters a {
    text-decoration: none;
}

.filters a:hover {
    text-decoration: none;
}


            .filter {
                margin-right: 2rem;
                text-align: center;
                opacity: 0.7;
                cursor: pointer;
                margin-bottom: 12px;
                margin-top: 5px;
                text-decoration: none;
                color: black;
            }

            .filter:hover {
                opacity: 1.0;

            }

            .filter p {
                font-size: 0.8rem;
                text-decoration: none;
            }
            .tax-toggle{
                border: 1px black solid;
                border-radius: 20px;
                height: 3.25rem;
                padding: 5px;
                padding-top: 1px;
                display: flex;
                align-items: center;
            }
            .gst{
                display: none;
            }
        </style>
        
        <% if(typeof cat == "undefined"){ %>
            <br>
       <div class="filters">

    <a href="/listings/category?cat=Trending">
        <div class="filter"><i class="fa-solid fa-fire"></i>
            <p>Trending</p>
        </div>
    </a>

    <a href="/listings/category?cat=Rooms">
        <div class="filter"><i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
        </div>
    </a>

    <a href="/listings/category?cat=Iconic Cities">
        <div class="filter"><i class="fa-solid fa-mountain-city"></i>
            <p>Iconic Cities</p>
        </div>
    </a>

    <a href="/listings/category?cat=Mountains">
        <div class="filter"><i class="fa-solid fa-mountain"></i>
            <p>Mountains</p>
        </div>
    </a>

    <a href="/listings/category?cat=Castles">
        <div class="filter"><i class="fa-brands fa-fort-awesome"></i>
            <p>Castles</p>
        </div>
    </a>

    <a href="/listings/category?cat=Pools">
        <div class="filter"><i class="fa-solid fa-person-swimming"></i>
            <p>Pools</p>
        </div>
    </a>

    <a href="/listings/category?cat=Camping">
        <div class="filter"><i class="fa-solid fa-campground"></i>
            <p>Camping</p>
        </div>
    </a>

    <a href="/listings/category?cat=Farms">
        <div class="filter"><i class="fa-solid fa-tractor"></i>
            <p>Farms</p>
        </div>
    </a>

    <a href="/listings/category?cat=Arctic">
        <div class="filter"><i class="fa-solid fa-snowflake"></i>
            <p>Arctic</p>
        </div>
    </a>

    <a href="/listings/category?cat=Beach">
        <div class="filter"><i class="fa-solid fa-umbrella-beach"></i>
            <p>Beach</p>
        </div>
    </a>

    <a href="/listings/category?cat=Apartments">
        <div class="filter"><i class="fa-solid fa-building"></i>
            <p>Apartments</p>
        </div>
    </a>

    <a href="/listings/category?cat=Homes">
        <div class="filter"><i class="fa-solid fa-house"></i>
            <p>Homes</p>
        </div>
    </a>

            <div class="tax-toggle ms-auto">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
                </div>
            </div>



        </div>
        
        <% } %>
<br>
         <% if(typeof cat != "undefined"){ %>
            <h3>List from category <%= cat %> :</h3>
            <br>
            <% } %>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let list of alllisting){%>
                <a href="/listings/<%= list._id %>/show" class="listing-link">
                    <div class="card col mb-4">
                        <img src="<%= list.image.url %>" class="card-img-top" alt="..." style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= list.title %>
                                </b>
                                <br>
                                &#8377;<%= list.price.toLocaleString("en-IN") %> / night
                                <i class="gst">&nbsp;  +   18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>

                <% } %>

        </div>
<script>
    let taxswitch = document.getElementById("flexSwitchCheckDefault");

    taxswitch.addEventListener("click", () => {
        let taxinfo = document.getElementsByClassName("gst");

        for (let tax of taxinfo) {

            if (tax.style.display !== "inline") {
                tax.style.display = "inline";  
            } else {
                tax.style.display = "none";     
            }

        }
    });
</script>

    </body>