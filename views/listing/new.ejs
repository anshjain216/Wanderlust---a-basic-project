<% layout("/layout/boilerplate.ejs") %>

    <body>
        <br>
        <h2>Creating new listing</h2>
        <br>
        <div class="row">
            <div class="col-8 offset-2">
                <form action="/listings" method="post" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" class="form-control" placeholder="Enter Title"
                            required>
                        <div class="invalid-feedback">
                            Please Enter a title.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">
                            Please enter a description.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload image</label>
                        <input type="file" name="listing[image]" class="form-control" placeholder="Upload an image"
                            required>
                    </div>
                    <br>
                    <p>Select all categories that apply</p>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                            data-bs-toggle="dropdown"  data-bs-auto-close="outside">
                            Select Categories
                        </button>

                        <ul class="dropdown-menu p-3" style="max-height: 250px; overflow-y: auto;">
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Trending"> Trending
                                </label>
                            </li>
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Rooms"> Rooms
                                </label>
                            </li>
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Iconic Cities"> Iconic
                                    Cities
                                </label>
                            </li>
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Mountains"> Mountains
                                </label>
                            </li>
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Castles"> Castles
                                </label>
                            </li>
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Pools"> Pools
                                </label>
                            </li>
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Camping"> Camping
                                </label>
                            </li>
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Farms"> Farms
                                </label>
                            </li>
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Arctic"> Arctic
                                </label>
                            </li>
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Beach"> Beach
                                </label>
                            </li>
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Apartments"> Apartments
                                </label>
                            </li>
                            <li>
                                <label class="dropdown-item">
                                    <input type="checkbox" name="listing[categories][]" value="Homes"> Homes
                                </label>
                            </li>
                        </ul>
                    </div>

                    <br>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="text" name="listing[price]" id="" class="form-control"
                                placeholder="Enter Price" required>
                            <div class="invalid-feedback">
                                Please Enter a price.
                            </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" name="listing[location]" id="" required class="form-control"
                                placeholder="Enter your location">
                            <div class="invalid-feedback">
                                Please Enter a location.
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" required class="form-control"
                            placeholder="Enter your country">
                        <div class="invalid-feedback">
                            Please Enter a country.
                        </div>
                    </div>
                    <button class="btn btn-dark submit-btn"> submit </button>
                </form>
                <br>
            </div>
        </div>
    </body>